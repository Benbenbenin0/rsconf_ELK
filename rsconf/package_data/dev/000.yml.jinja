---
default:
  celery_sirepo:
    queues: "sequential,parallel"
  sirepo:
    pkcli:
      service_processes: 1
      service_threads: 20
      service_port: 7000
    oauth:
      github_key: ""
      github_secret: ""
    server:
      oauth_login: false

channel:
  {{ channel }}:
    sirepo:
      celery_tasks:
        celeryd_concurrency: 1
        broker_url: "amqp://guest@{{ host }}//"
      mpi.cores: 2

host:
  {{ channel }}:
    {{ host }}:
      components: [ sirepo ]
