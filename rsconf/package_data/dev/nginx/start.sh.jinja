#!/bin/bash
set -euo pipefail
if [[ ! -r {{ srv_d }}/index.sh ]]; then
    ln -s radiasoft/download/bin/index.sh '{{ srv_d }}'
fi
cd "$(dirname "${BASH_SOURCE[0]}")"
if [[ -r nginx.pid ]]; then
    kill -QUIT "$(cat nginx.pid)" || true
fi
echo 'Ignore alert "/var/log/nginx/error.log"' 1>&2
exec nginx -p "$PWD" -c nginx.conf
