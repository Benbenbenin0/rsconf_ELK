server {
    listen {{ sirepo_nginx_vhost }}:80;
    server_name {{ sirepo_nginx_vhost }};
    return 301 https://$http_host$request_uri;
}

server {
    listen {{ sirepo_nginx_vhost }}:443 ssl;
    server_name {{ sirepo_nginx_vhost }};
    root {{ nginx_default_root }};
    {% if nginx_ssl_crt -%}
    ssl_certificate {{ nginx_ssl_crt }};
    ssl_certificate_key {{ nginx_ssl_key }};
    {%- endif %}
    location / {
        allow all;
        include uwsgi_params;
        client_max_body_size 50m;
        uwsgi_read_timeout 300s;
        uwsgi_send_timeout 300s;
        uwsgi_pass {{ sirepo_nginx_vhost }}:{{ sirepo_pkcli_service_port }};
    }
}
