{
    "iptables": {{ docker_iptables | tojson }},
    "live-restore": true,
    "log-driver": "journald",
    {%- if docker_registry_http_host %}
    "registry-mirrors": ["{{ docker_registry_http_host }}"],
    {%- endif -%}
    "storage-driver": "devicemapper",
    "storage-opts": [
        "dm.thinpooldev=/dev/mapper/{{ docker_volume_group }}-thinpool",
        "dm.use_deferred_removal=true",
        "dm.use_deferred_deletion=true"
    ]
}
